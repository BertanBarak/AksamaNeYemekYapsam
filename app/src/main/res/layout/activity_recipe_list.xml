<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeListActivity">

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menü"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMenu"
        app:srcCompat="@drawable/corba" />

    <TextView
        android:id="@+id/textViewCorba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çorba"
        app:layout_constraintEnd_toEndOf="@id/imgbtn1"
        app:layout_constraintStart_toStartOf="@id/imgbtn1"
        app:layout_constraintTop_toBottomOf="@id/imgbtn1" />

    <ImageButton
        android:id="@+id/imgbtn2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgbtn1"
        app:srcCompat="@drawable/yemek" />

    <TextView
        android:id="@+id/textViewAnaYemek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ana Yemek"
        app:layout_constraintEnd_toEndOf="@id/imgbtn2"
        app:layout_constraintStart_toStartOf="@id/imgbtn2"
        app:layout_constraintTop_toBottomOf="@id/imgbtn2" />

    <ImageButton
        android:id="@+id/imgbtn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgbtn2"
        app:srcCompat="@drawable/tatli" />

    <TextView
        android:id="@+id/textViewTatli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tatlı"
        app:layout_constraintEnd_toEndOf="@id/imgbtn3"
        app:layout_constraintStart_toStartOf="@id/imgbtn3"
        app:layout_constraintTop_toBottomOf="@id/imgbtn3" />

</androidx.constraintlayout.widget.ConstraintLayout>
